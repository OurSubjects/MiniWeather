<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:id="@+id/layout_lm_first"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#2196F3">
        <ImageView
            android:id="@+id/back_lm"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/location_back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="城市管理"
            android:textColor="#000000"
            android:textSize="25.0sp"
            android:gravity="center">
        </TextView>
        <ImageView
            android:id="@+id/location_add_lm"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/location_add">
        </ImageView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_lm_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_lm_first">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_lm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>