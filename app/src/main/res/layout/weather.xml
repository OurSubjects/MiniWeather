<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    tools:context=".MainActivity">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/back1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45.0dp">
                <ImageView
                    android:id="@+id/location_list"
                    android:layout_height="45.0dp"
                    android:layout_width="45.0dp"
                    android:src="@drawable/location">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="北京"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:id="@+id/city_now">
                </TextView>
                <ImageView
                    android:id="@+id/positioning"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/positioning">
                </ImageView>
            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/second_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/first_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/num_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="80sp"
                        android:textColor="#ffffff"
                        android:includeFontPadding="false">
                    </TextView>
                    <TextView
                        android:id="@+id/situation_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晴"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:includeFontPadding="false">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/first_linear">
                    <TextView
                        android:id="@+id/unit_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="℃"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:includeFontPadding="true">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/first_relative"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/second_linear"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pic_weather"
                        android:tint="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/p100"
                        />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp">
                <TextView
                    android:id="@+id/real_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#fff">
                </TextView>
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="风力1级"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#fff">
                </TextView>
            </LinearLayout>
            <include layout="@layout/forecast">
            </include>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>